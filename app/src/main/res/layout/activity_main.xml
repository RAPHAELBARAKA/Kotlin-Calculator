<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/blackbackground">

    <EditText
        android:id="@+id/inputs"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:id="@+id/results"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputs"
        tools:ignore="SpeakableTextPresentCheck" />


    <Button
        android:id="@+id/buttonAC"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="AC"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/results"
        app:layout_constraintTop_toBottomOf="@id/results"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/buttonx"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/buttonAC"
        app:layout_constraintTop_toBottomOf="@id/results"
        android:background="@drawable/dark_lighter"/>
    <Button
        android:id="@+id/buttonslash"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="/"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/buttonx"
        app:layout_constraintTop_toBottomOf="@id/results"
        android:background="@drawable/bluebackground"/>
    <Button
        android:id="@+id/buttonstar"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="*"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/buttonslash"
        app:layout_constraintTop_toBottomOf="@id/results"
        android:background="@drawable/bluebackground"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="7"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        app:layout_constraintTop_toBottomOf="@id/buttonAC"
        android:background="@drawable/dark_lighter"/>
    <Button
        android:id="@+id/button8"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="8"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/buttonx"
        android:background="@drawable/dark_lighter"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="9"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/buttonslash"
        android:background="@drawable/dark_lighter"/>
    <Button
        android:id="@+id/buttonminus"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/buttonstar"
        android:background="@drawable/bluebackground"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <Button
        android:id="@+id/button5"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button8"
        android:background="@drawable/dark_lighter"
        tools:ignore="RtlHardcoded,SpUsage" />
    <Button
        android:id="@+id/button6"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="6"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9"
        android:background="@drawable/dark_lighter"/>
    <Button
        android:id="@+id/buttonplus"
        android:layout_width="72dp"
        android:layout_height="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/buttonminus"
        android:background="@drawable/bluebackground"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="4"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button7"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <Button
        android:id="@+id/button2"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button5"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <Button
        android:id="@+id/button3"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button6"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <Button
        android:id="@+id/buttonequal"
        android:layout_width="72dp"
        android:layout_height="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="="
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/buttonplus"
        android:background="@drawable/bluebackground"/>
    <Button
        android:id="@+id/button0"
        android:layout_width="153dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:background="@drawable/dark_lighter"
        tools:ignore="HardcodedText,SpUsage" />
    <Button
        android:id="@+id/buttondot"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="."
        android:textAlignment="center"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:background="@drawable/dark_lighter"/>

</androidx.constraintlayout.widget.ConstraintLayout>

